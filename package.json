{
	"name": "mcp-memory-sqlite",
	"version": "0.0.3",
	"description": "SQLite-based persistent memory tool for MCP with vector search",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"mcp-memory-sqlite": "./dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/spences10/mcp-memory-sqlite"
	},
	"bugs": {
		"url": "https://github.com/spences10/mcp-memory-sqlite/issues"
	},
	"homepage": "https://github.com/spences10/mcp-memory-sqlite#readme",
	"keywords": [
		"mcp",
		"memory",
		"vector",
		"sqlite",
		"sqlite-vec",
		"knowledge-graph",
		"database",
		"vector-search",
		"semantic-search",
		"knowledge-management"
	],
	"scripts": {
		"build": "tsc && chmod +x dist/index.js",
		"start": "node dist/index.js",
		"dev": "node --loader ts-node/esm src/index.ts",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"migrate": "node --loader ts-node/esm src/db/migrations/run.ts",
		"prepare": "pnpm run build",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm run build && changeset publish"
	},
	"dependencies": {
		"@tmcp/adapter-valibot": "^0.1.4",
		"@tmcp/transport-stdio": "^0.3.1",
		"@types/node": "^24.9.1",
		"better-sqlite3": "^12.4.1",
		"sqlite-vec": "^0.1.6",
		"tmcp": "^1.15.3",
		"valibot": "^1.1.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@types/better-sqlite3": "^7.6.13",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"volta": {
		"node": "22.20.0"
	}
}
